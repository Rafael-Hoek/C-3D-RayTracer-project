def material(c)
{
  Materials.uniform( [ "ambient": c * 0.1,
                       "diffuse": c * 0.8,
                       "specular": Colors.white() * 0.2,
                       "specular_exponent": 10,
                       "light_filtering": c,
                       "transparency": 0,
                       "refractive_index": 0 ] )
}

def scene_at(now) {

	var x = Animations.animate(1, 3, seconds(5))
	
	var camera = Cameras.perspective( [ "eye": pos(0,0,5),
	                                    "look_at": pos(0,0,0) ] )
	                                    
	var primitives = []
	
	primitives.push_back(decorate(material(Colors.red()),translate(vec(-2,0,0),sphere())))
	primitives.push_back(decorate(material(Colors.blue()),translate(vec(2,0,0),sphere())))
	primitives.push_back(decorate(material(Colors.white()),translate(vec(0,0,-5),xy_plane())))
	
	
	  
	
	var root = union(primitives)
	
	var lights = [ Lights.omnidirectional( pos(x[now],0,5), Colors.white() * 0.6 ),Lights.omnidirectional( pos(-x[now],0,5), Colors.white() * 0.6 ) ]
	
	var scene = create_scene(camera, root, lights)
}
var raytracer = Raytracers.v5()

var renderer = Renderers.standard( [ "width": 500,
                                     "height": 500,
                                     "sampler": Samplers.stratified(1,1),
                                     "ray_tracer": raytracer ] )

pipeline( scene_animation(scene_at, seconds(5)),
          [ Pipeline.animation(30),
            Pipeline.renderer(renderer),
            Pipeline.studio()] )